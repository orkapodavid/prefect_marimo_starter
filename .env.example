# Environment overrides for Prefect Marimo Workflows
ENVIRONMENT=dev
LOG_LEVEL=INFO
APP_NAME="Prefect Marimo Workflows"

# Database connection
# DATABASE_URL=sqlite:///data/workflow.db
# DATABASE_URL=postgresql://user:pass@localhost:5432/dbname
DB_POOL_SIZE=5

# Prefect setup
# PREFECT_API_URL=http://localhost:4200/api
# WORK_POOL_NAME=windows-process-pool

# Exchange Service
# EXCHANGE_USERNAME=domain\user
# EXCHANGE_PASSWORD=password
# EXCHANGE_EWS_URL=https://mail.domain.com/EWS/Exchange.asmx

# MS SQL Server Connection - DEV
DEV_MSSQL_SERVER=
DEV_MSSQL_DATABASE=
DEV_MSSQL_USERNAME=
DEV_MSSQL_PASSWORD=

# MS SQL Server Connection - PROD
PROD_MSSQL_SERVER=
PROD_MSSQL_DATABASE=
PROD_MSSQL_USERNAME=
PROD_MSSQL_PASSWORD=

# Paths
# DATA_DIRECTORY=./data
# LOG_DIRECTORY=./logs
# REPORTS_DIRECTORY=./reports

# Processing
BATCH_SIZE=1000
RETRY_ATTEMPTS=3
TIMEOUT_SECONDS=300

# Notifications
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL=admin@example.com
NOTIFY_ON_FAILURE=true
NOTIFY_ON_SUCCESS=false
